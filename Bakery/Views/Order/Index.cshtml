<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Vendor List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body> 
    @using Bakery.Models;

    <h1>Pierre Bakery - Order List</h1>


    @if (@Model.Count == 0)
    {
      <h3>No orders have been added yet!</h3>
    } 

    @foreach (Order order in Model)
    {
      <li>@order.Item</li>
      <li style="margin-left:2em">@order.Amount</li>
      <li style="margin-left:2em">@order.Price</li>
      <li style="margin-left:2em">@order.Date</li>
    }
    <p><a href="/">Back home</a></p>
    <h3><a href='/vendors/'>Add a new vendor</a></h3>
  </body>
</html>