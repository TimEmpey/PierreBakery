  <body>
    <h1>Pierre Bakery - New Vendor</h1>
    <div class="form">
      <div class="inputs">
        <form action="/vendors" method="post">
          <input for="vendorName" name="vendorName" type="text" placeholder="Vendor">
          <input for="vendorLocation" name="vendorLocation" type="text" placeholder="Location">
